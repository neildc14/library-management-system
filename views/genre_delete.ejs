<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>

          <div class="col col-sm-10 content">
            <div class="heading bg-secondary py-2">
              <h2 class="title text-light my-0">
                Genre: <span class="title-desc"><%=genre.name%></span>
              </h2>
            </div>

            <section class="mx-5 mt-4">
              <h4 class="mx-2">Books</h4>
              <div class="horizontal-line"></div>
              <form
                action=""
                method="POST"
                class="border-0 p-0 mt-2"
                style="margin-left: 0 !important"
              >
                <div
                  class="alert alert-warning d-flex align-items-center"
                  role="alert"
                >
                  <span class="material-symbols-outlined"> warning </span>
                  <div class="px-2">
                    Do you really want to delete this Genre?
                  </div>
                </div>
                <div class="form-group">
                  <input
                    type="hidden"
                    name="genreid"
                    value="<%=genre._id%>"
                    id="<%=genre._id%>"
                    required="true"
                  />
                </div>
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
              <hr />
              <%if(genre_books.length <= 0) {%>
              <p>This genre has no books</p>

              <%}%> <%if(genre_books.length > 0) {%>
              <%genre_books.forEach((genre_book) =>{ %>
              <div>
                <a class="book-desc" href="<%=genre_book.url%>"
                  ><%=genre_book.title%></a
                >
                <p><%=genre_book.summary%></p>
              </div>
              <%})%> <%}%>
            </section>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
