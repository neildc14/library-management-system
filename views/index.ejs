<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>

          <div class="col col-sm-10 content">
            <div class="heading bg-success">
              <h1 class="title"><%=title%></h1>
            </div>

            <div class="card mt-4">
              <div class="card-header">
                <h3>Record Content</h3>
                <%if (error) {%>
                <p>Error getting dynamic content.</p>
                <%} else {%>
              </div>

              <ul class="list-group list-group-flush">
                <li class="list-group-item">
                  <strong>Books:</strong> <%=data.book_count%>
                </li>
                <li class="list-group-item">
                  <strong>Copies:</strong> <%=data.book_instance_count%>
                </li>
                <li class="list-group-item">
                  <strong>Copies available::</strong>
                  <%=data.book_instance_available_count%>
                </li>
                <li class="list-group-item">
                  <strong>Authors:</strong> <%=data.author_count%>
                </li>
                <li class="list-group-item">
                  <strong>Genres:</strong> <%=data.genre_coun%>
                </li>
                <%}%>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
