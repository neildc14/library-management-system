<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <div class="text-center spinner">
      <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>

          <div class="col col-sm-10 content">
            <div class="heading bg-secondary py-2">
              <h2 class="title text-light my-0">
                Genre: <span class="title-desc"><%=genre.name%></span>
              </h2>
            </div>

            <section class="mx-5 mt-4">
              <h4 class="mx-2">Books</h4>
              <div class="horizontal-line"></div>
              <div class="d-flex mt-2 mb-3">
                <a
                  class="btn btn-primary btn-sm"
                  href="<%=genre.url+'/delete'%>"
                  >Delete genre</a
                >
              </div>

              <%if(genre_books.length <= 0) {%>
              <p>This genre has no books</p>

              <%} else {%> <%genre_books.forEach((genre_book) =>{ %>
              <div>
                <a class="book-desc" href="<%=genre_book.url%>"
                  ><%=genre_book.title%></a
                >
                <p><%=genre_book.summary%></p>
              </div>
              <%})%><%}%>
            </section>
          </div>
        </div>
      </div>
    </main>

    <%- include('./partials/scripts'); %>
  </body>
</html>
