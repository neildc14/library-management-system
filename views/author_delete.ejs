<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>

  <body>
    <div class="text-center spinner">
      <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>
          <div class="col col-sm-10 content">
            <div class="heading bg-secondary py-2">
              <h2 class="title text-light my-0">
                Author:
                <span class="author-desc"><%=author.name%></span>
              </h2>
            </div>
            <section class="mt-2">
              <p>
                <%=author.date_of_birth_formatted%>
                <%if(author.date_of_death_formatted !== " ") {%> - <%}%>
                <%=author.date_of_death_formatted%>
              </p>
            </section>
            <section class="mx-5 mt-4">
              <h4 class="mx-2">Books</h4>
              <div class="horizontal-line"></div>

              <%if(author_books.length > 0) {%>
              <div
                class="alert alert-danger d-flex align-items-center mt-1"
                role="alert"
              >
                <span class="material-symbols-outlined pe-2"> warning </span>
                <div>
                  Delete the following book before attempting to delete this
                  author.
                </div>
              </div>

              <%author_books.forEach((book)=> {%>
              <a href="<%=book.url%>"><%=book.title%></a>
              <p><%=book.summary%></p>
              <%})%> <%} else{%>

              <form
                action=""
                method="POST"
                style="margin-left: 0 !important"
                class="border-0"
              >
                <div class="form-group">
                  <div
                    class="alert alert-warning d-flex align-items-center mt-1"
                    role="alert"
                  >
                    <span class="material-symbols-outlined pe-2">
                      warning
                    </span>
                    <div>Do you really want to delete this author?</div>
                  </div>
                  <input
                    type="hidden"
                    name="authorid"
                    value="<%=author._id%>"
                    required="true"
                  />
                  <button type="submit" class="btn btn-danger">Delete</button>
                </div>
              </form>
              <%}%>
            </section>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
