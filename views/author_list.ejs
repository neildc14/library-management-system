<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>

          <div class="col col-sm-10 content">
            <div
              class="heading bg-success d-flex align-items-center py-2 d-flex justify-content-between"
            >
              <div class="d-flex">
                <img
                  src="/images/author.png"
                  alt="library folder image"
                  height="40"
                  width="40"
                />
                <h2 class="title text-light mx-2 my-0"><%=title%></h2>
              </div>
              <span class="text-light">Total: <%=author_list.length%></span>
            </div>
            <div class="card mt-4">
              <table class="table m-0">
                <%if(author_list.length <= 0) {%>
                <tbody>
                  <tr>
                    <td>There are no authors.</td>
                  </tr>
                </tbody>
                <%}%>

                <thead>
                  <tr>
                    <th scope="col">Author</th>
                    <th scope="col">Date of Birth</th>
                    <th scope="col">Date of Death</th>
                  </tr>
                </thead>
                <%author_list.forEach((author)=> {%>
                <tbody>
                  <tr>
                    <td>
                      <a href="<%=author.url%>"
                        ><span class="author-desc"><%=author.name%> </span></a
                      >
                    </td>
                    <td><%=author.date_of_birth_formatted%></td>
                    <td><%=author.date_of_death_formatted%></td>
                  </tr>
                </tbody>
                <%}) %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
