<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <div class="text-center spinner">
      <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>
          <div class="col col-sm-10 content">
            <div
              class="heading bg-success d-flex align-items-center py-2 d-flex justify-content-between"
            >
              <div class="d-flex">
                <img
                  src="/images/book.png"
                  alt="library folder image"
                  height="40"
                  width="40"
                />
                <h2 class="title text-light mx-2 my-0"><%=title%></h2>
              </div>
              <span class="text-light">Total: <%=book_list.length%></span>
            </div>
            <div class="card mt-4">
              <ul class="list-group list-group-flush">
                <%if(book_list.length <= 0) {%>
                <li class="list-group-item"></li>

                <%}%> <%book_list.forEach((book)=> {%>
                <li class="list-group-item booklist">
                  <a href="<%=book.url%>"
                    ><span class="book-desc"><%=book.title%></span></a
                  >
                  <span class="author-desc">(<%=book.author.name%>)</span>
                </li>
                <%}) %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
