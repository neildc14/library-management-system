<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <main>
      <h1 class="text-center text-success pt-5">SAN JOSE CITY LIBRARY</h1>
      <form
        action="/login"
        method="POST"
        style="margin-top: 10vh; max-width: 300px"
      >
        <h5>Login</h5>
        <hr />
        <div class="form-group">
          <label for="username" class="form-text">Enter Username:</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required="true"
          />
        </div>
        <div class="form-group">
          <label for="password" class="form-text">Enter Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required="true"
          />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <br />
        <div class="mt-3">
          <a href="/user=register">Register account.</a>
        </div>
      </form>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
