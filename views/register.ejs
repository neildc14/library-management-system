<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body class="m-0 p-0">
    <main>
      <div class="container-fluid front-cover p-4">
        <div class="d-flex justify-content-center banner">
          <img
            src="/images/SJClogo2.png"
            alt="SJC logo"
            height="70"
            width="70"
          />
          <h1 class="text-center text-white m-0 px-3">SAN JOSE CITY LIBRARY</h1>
        </div>
      </div>

      <form
        action="register"
        method="POST"
        class="shadow-sm bg-light rounded auth-form"
        style="margin-top: 10vh; max-width: 330px"
      >
        <h5 class="text-center">Sign up</h5>
        <hr />
        <div class="form-group">
          <label for="name" class="form-text">Name:</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            required="true"
            placeholder="Firstname,    Lastname"
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="username" class="form-text">Username:</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required="true"
            maxlength="20"
            placeholder="max-length of 20 characters"
          />
        </div>
        <div class="form-group">
          <label for="password" class="form-text">Password:</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required="true"
            placeholder="min-length of 8 characters"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary text-center mt-2"
          style="width: 100%"
        >
          Sign up
        </button>
        <br />
        <div class="mt-3 mx-auto d-flex">
          <p>Already have an account?</p>
          <a href="/user/login" class="px-1">Sign in</a>
        </div>
      </form>
    </main>
    <%- include('./partials/scripts'); %>
  </body>
</html>
