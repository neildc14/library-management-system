<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); %>
  <body>
    <div class="text-center spinner">
      <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <main>
      <div class="container-fluid">
        <div class="row">
          <%- include('./partials/nav'); %>

          <div class="col col-sm-10 content">
            <div class="heading bg-secondary py-2">
              <h2 class="title text-light my-0">ID: <%=bookinstance.id%></h2>
            </div>
            <section class="mt-3">
              <p>
                <strong>Title: </strong>
                <a href="<%=bookinstance.book.url%>" class="instance-desc"
                  ><%=bookinstance.book.title%></a
                >
              </p>
              <p><strong>Imprint: </strong><%=bookinstance.imprint%></p>
              <p>
                <strong>Status: </strong>
                <%if(bookinstance.status === "Available") {%>
                <span class="text-success"><%=bookinstance.status%></span>
                <%} else if(bookinstance.status === "Maintenance") {%>
                <span class="text-danger"><%=bookinstance.status%></span>
                <%} else {%>
                <span class="text-warning"><%=bookinstance.status%></span>
                <%}%>
              </p>
              <p>
                <strong>Due back: </strong><%=bookinstance.due_back_formatted%>
              </p>
            </section>
          </div>
        </div>
      </div>
    </main>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
